      </initialize>
      <normal_modes propagator='bab'>
        <nmts> 10 </nmts>
          <bosons> [0, 1, 2] </bosons>
        </normal_modes>
      <ensemble>
         <temperature units='kelvin'> 23.22 </temperature>
      </ensemble>
      <motion mode='dynamics'>
    <fixcom> False </fixcom>
        <dynamics mode='nvt'>
         <timestep units='femtosecond'> 1.0 </timestep>
      <thermostat mode='pile_l'>
        <tau units='femtosecond'>100</tau>
      </thermostat>
        </dynamics>
      </motion>
  </system>
</simulation>
